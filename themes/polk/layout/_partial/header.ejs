<header class="bg-gray-800 text-white p-4">
  <nav class="flex justify-between items-center">
    <h1 class="text-2xl font-bold"><a href="/" class="hover:text-gray-300"><%= config.title %></a></h1>
    <ul class="flex space-x-4">
      <% for (name in theme.menu) { %>
        <li><a href="<%- url_for(theme.menu[name]) %>" class="hover:text-gray-300"><%= name %></a></li>
      <% } %>   
    </ul>
  </nav>
</header>